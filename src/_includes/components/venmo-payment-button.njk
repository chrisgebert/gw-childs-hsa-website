<!-- _includes/components/venmo-payment-button.njk -->
<!-- Simple Venmo payment button that opens Venmo app -->

<div class="venmo-payment-section">
  <h3>Give Directly with Venmo</h3>
  
  <!-- Payment Details -->
  <div class="payment-details">
    {% if amount %}
    <div class="amount-display">
      <span class="currency">$</span>
      <span class="amount">{{ amount }}</span>
    </div>
    {% endif %}
    
    {% if description %}
    <p class="payment-description">{{ description }}</p>
    {% endif %}
  </div>
  
  <!-- Venmo Payment Button -->
  <a href="{{ venmoUrl }}" class="venmo-pay-button" id="venmoPayButton">
    <svg class="venmo-icon" width="24" height="24" viewBox="0 0 24 24">
      <path d="M22.5 12c0 5.799-4.701 10.5-10.5 10.5S1.5 17.799 1.5 12 6.201 1.5 12 1.5 22.5 6.201 22.5 12z" fill="#3D95CE"/>
      <path d="M16.65 7.2c.45 1.05.6 1.95.6 3.15 0 3.75-2.85 8.25-5.25 8.25h-2.4L7.5 7.35h3.15l1.2 7.5c.9-1.35 1.8-3.3 1.8-5.25 0-.9-.15-1.65-.3-2.1L16.65 7.2z" fill="white"/>
    </svg>
    Give Directly with Venmo
  </a>
  
  <!-- Alternative: QR Code for mobile -->
  {% if showQR %}
  <div class="qr-section">
    <p>Or scan this QR code with your phone:</p>
    <div class="qr-code" id="qrCode"></div>
  </div>
  {% endif %}
  
  <!-- Manual payment instructions -->
  <div class="manual-instructions">
    <details>
      <summary><em>Manual Donation Instructions</em></summary>
      <ol>
        <li>Open the Venmo app on your phone</li>
        <li>Search for: <strong>@{{ venmoUsername }}</strong></li>
        {%- if amount %}<li>Enter amount: <strong>${{ amount }}</strong></li>{% endif %}
        {% if description %}<li>Add note: <strong>{{ description }}</strong></li>{% endif %}
        <li>Send donation</li>
      </ol>
    </details>
  </div>
</div>
